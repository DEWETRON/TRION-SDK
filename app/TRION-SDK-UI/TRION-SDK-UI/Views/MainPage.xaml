<?xml version="1.0" encoding="utf-8" ?>
<!--
    MainPage UI Layout ( .NET MAUI )
-->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ScottPlot="clr-namespace:ScottPlot.Maui;assembly=ScottPlot.Maui"
             x:Class="TRION_SDK_UI.MainPage">

    <!-- Root layout grid: content + sidebar separated by a draggable handle -->
    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="*"/>
            <!-- Body -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Main interactive area (plot + scrollable content) -->
            <ColumnDefinition Width="6"/>
            <!-- Drag handle column -->
            <ColumnDefinition Width="300" x:Name="SidebarColumn" />
            <!-- Sidebar with channels -->
        </Grid.ColumnDefinitions>

        <!-- Toolbar: acquisition + UI control buttons -->
        <Border Grid.Row="0" Grid.Column="0"
                Padding="10"
                BackgroundColor="{AppThemeBinding Light=#f8f8f8, Dark=#333333}"
                Stroke="{AppThemeBinding Light=#e0e0e0, Dark=#444444}"
                Margin="0,0,0,5">
            <HorizontalStackLayout Spacing="5">
                <Button Text="Lock Scrolling" Command="{Binding LockScrollingCommand}" />
                <Button Text="Start Acquisition" Command="{Binding StartAcquisitionCommand}" />
                <Button Text="Stop Acquisition" Command="{Binding StopAcquisitionCommand}" />
                <Button Text="Toggle Theme" Command="{Binding ToggleThemeCommand}" />
            </HorizontalStackLayout>
        </Border>

        <!-- MAIN LEFT AREA: Plot (fixed area) + scrollable metrics/log -->
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Plot row -->
                <RowDefinition Height="*"/>
                <!-- ScrollView row -->
            </Grid.RowDefinitions>

            <!-- Plot kept separate from ScrollView so wheel / gestures interact with the plot first -->
            <ScottPlot:MauiPlot x:Name="MauiPlot1"
                                Grid.Row="0"
                                HeightRequest="400" />

            <!-- Scrollable content: digital meters and log -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout Padding="30,0" Spacing="25">

                    <!-- Digital Meters: laid out as a responsive 3-column grid -->
                    <CollectionView Grid.Column="2"
                                    ItemsSource="{Binding DigitalMeters}"
                                    BackgroundColor="LightGray"
                                    SelectionMode="None"
                                    Margin="10,0,0,0"
                                    HorizontalOptions="Fill">
                        <CollectionView.ItemsLayout>
                            <!-- 3 items per row; vertical stacking by rows -->
                            <GridItemsLayout Orientation="Vertical" Span="3" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="4"
                                        Padding="8,6"
                                        StrokeThickness="1"
                                        Stroke="{AppThemeBinding Light=#cccccc, Dark=#555555}"
                                        BackgroundColor="{AppThemeBinding Light=#ffffff, Dark=#222222}"
                                        StrokeShape="RoundRectangle 6">
                                    <VerticalStackLayout Spacing="2"
                                                         HorizontalOptions="Center"
                                                         VerticalOptions="Center">
                                        <!-- Meter label -->
                                        <Label Text="{Binding Label}"
                                               FontSize="12"
                                               HorizontalTextAlignment="Center"
                                               TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                        <!-- Numeric value with unit (formatted to 3 decimals) -->
                                        <Label>
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding Value, StringFormat='{0:F3}'}" FontAttributes="Bold" />
                                                    <Span Text=" " />
                                                    <Span Text="{Binding Unit}" FontSize="10" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                            <Label.FontSize>18</Label.FontSize>
                                            <Label.HorizontalTextAlignment>Center</Label.HorizontalTextAlignment>
                                        </Label>
                                    </VerticalStackLayout>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Log header -->
                    <Label Text="Log"
                           Style="{StaticResource SubHeadline}"
                           SemanticProperties.HeadingLevel="Level2"
                           HorizontalOptions="Start" />

                    <!-- Log messages list: simple vertical text list -->
                    <CollectionView x:Name="LogView"
                                    ItemsSource="{Binding LogMessages}"
                                    HeightRequest="200"
                                    BackgroundColor="#11111111"
                                    SelectionMode="None">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="2" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Label Text="{Binding .}"
                                       FontSize="12"
                                       FontFamily="Consolas"
                                       LineBreakMode="WordWrap"
                                       TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </VerticalStackLayout>
            </ScrollView>
        </Grid>

        <!-- Drag handle: user drags horizontally to resize the right sidebar (handled in code-behind) -->
        <BoxView Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                 BackgroundColor="DarkGray"
                 WidthRequest="20"
                 HorizontalOptions="Fill"
                 VerticalOptions="Fill"
                 x:Name="DragHandle">
            <BoxView.GestureRecognizers>
                <PanGestureRecognizer PanUpdated="OnDragHandlePanUpdated" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- SIDEBAR: Channel list with contextual actions -->
        <CollectionView Grid.Row="0" Grid.RowSpan="2" Grid.Column="2"
                        ItemsSource="{Binding Channels}"
                        BackgroundColor="LightGray"
                        SelectionMode="None"
                        Margin="10,0,0,0"
                        HorizontalOptions="Fill">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout Spacing="20" Padding="0" VerticalOptions="Center">

                        <!-- Context flyout -->
                        <FlyoutBase.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Text="Show Channel Properties"
                                                Command="{Binding BindingContext.ShowChannelPropertiesCommand, Source={x:Reference RootGrid}}"
                                                CommandParameter="{Binding .}" />
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Text="Copy Channel Path"
                                                Command="{Binding BindingContext.CopyChannelPathCommand, Source={x:Reference RootGrid}}"
                                                CommandParameter="{Binding .}" />
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Text="Select only this"
                                                Command="{Binding BindingContext.SelectOnlyChannelCommand, Source={x:Reference RootGrid}}"
                                                CommandParameter="{Binding .}" />
                                <MenuFlyoutItem Text="Select all on board"
                                                Command="{Binding BindingContext.SelectAllOnBoardCommand, Source={x:Reference RootGrid}}"
                                                CommandParameter="{Binding .}" />
                                <MenuFlyoutItem Text="Deselect all on board"
                                                Command="{Binding BindingContext.DeselectAllOnBoardCommand, Source={x:Reference RootGrid}}"
                                                CommandParameter="{Binding .}" />
                            </MenuFlyout>
                        </FlyoutBase.ContextFlyout>

                        <!-- Channel selection checkbox -->
                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" VerticalOptions="Center" />

                        <!-- Channel display; click to open new window -->
                        <Label Text="{Binding ., Converter={StaticResource ChannelToStringConverter}}"
                               FontSize="12"
                               TextColor="Black"
                               VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer
                                    NumberOfTapsRequired="1"
                                    Command="{Binding BindingContext.OpenChannelWindowCommand, Source={x:Reference RootGrid}}"
                                    CommandParameter="{Binding .}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
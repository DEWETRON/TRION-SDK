<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TRION_SDK_UI.BoardDetailPage"
             Title="{Binding Title}">
    <ScrollView>
        <VerticalStackLayout Padding="8" Spacing="8">
            <Label Text="{Binding Title}" FontSize="22" FontAttributes="Bold" />

            <BoxView HeightRequest="1" />

            <VerticalStackLayout Spacing="10">
                <VerticalStackLayout>
                    <Label Text="Operation Mode" FontAttributes="Bold" />
                    <Picker ItemsSource="{Binding OperationModes}"
                            SelectedItem="{Binding SelectedOperationMode, Mode=TwoWay}"
                            Title="Select mode" />
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label Text="Sample Rate (Hz)" FontAttributes="Bold" />
                    <Picker ItemsSource="{Binding SampleRates}"
                            SelectedItem="{Binding SelectedSampleRate, Mode=TwoWay}"
                            Title="Select sample rate" />
                </VerticalStackLayout>

                <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                    <Label Text="External Trigger" WidthRequest="150" VerticalOptions="Center" />
                    <Switch IsToggled="{Binding ExternalTrigger, Mode=TwoWay}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                    <Label Text="External Clock" WidthRequest="150" VerticalOptions="Center" />
                    <Switch IsToggled="{Binding ExternalClock, Mode=TwoWay}" />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <HorizontalStackLayout Spacing="12" Margin="0,10,0,0">
                <Button Text="Refresh" Command="{Binding RefreshCommand}" />
                <Button Text="Apply" Command="{Binding ApplyCommand}" />
            </HorizontalStackLayout>

            <Label FontSize="11"
                   Text="Note: After changing acquisition properties you may need to refresh the scan descriptor before starting a new acquisition." />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
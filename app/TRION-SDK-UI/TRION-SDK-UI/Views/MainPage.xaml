<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             x:Class="TRION_SDK_UI.MainPage">

    <Grid x:Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- Main content -->
            <ColumnDefinition Width="6" />
            <!-- Drag handle -->
            <ColumnDefinition Width="200" x:Name="SidebarColumn" />
            <!-- Sidebar -->
        </Grid.ColumnDefinitions>

        <!-- Main Content -->
        <ScrollView Grid.Column="0">
            <VerticalStackLayout
                Padding="30,0"
                Spacing="25">

                <Label
                    Text="System Information"
                    Style="{StaticResource SubHeadline}"
                    SemanticProperties.HeadingLevel="Level2" HorizontalOptions="Start" />

                <!-- Enclosure Info -->
                <Frame BackgroundColor="#EEE" Padding="10" Margin="0,10,0,0">
                    <VerticalStackLayout>
                        <Label Text="{Binding MyEnc.Name}" FontAttributes="Bold" FontSize="16" TextColor="Black"/>
                        <!--<Label Text="Active Boards:" FontAttributes="Italic" FontSize="14" Margin="0,5,0,0" TextColor="Black" />-->
                        <VerticalStackLayout BindableLayout.ItemsSource="{Binding MyEnc.Boards}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Label Text="{Binding Name}" FontSize="13" IsVisible="{Binding IsActive}" Margin="10,0,0,0" TextColor="Black"/>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>


                <!-- Add this inside your main content area -->
                <lvc:CartesianChart
                    Series="{Binding MeasurementSeries}"
                    HeightRequest="200"
                    Margin="0,20,0,0"/>

                <!-- Log View -->
                <CollectionView x:Name="LogView"
                                ItemsSource="{Binding LogMessages}"
                                HeightRequest="200">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding .}" FontSize="12" />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Add this where you want to display the data -->
                <CollectionView ItemsSource="{Binding ChannelMeasurementData}" HeightRequest="400">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding .}" FontSize="12" />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Drag Handle -->
        <BoxView Grid.Column="1"
                 BackgroundColor="DarkGray"
                 WidthRequest="20"
                 HorizontalOptions="Fill"
                 VerticalOptions="Fill"
                 x:Name="DragHandle">
            <BoxView.GestureRecognizers>
                <PanGestureRecognizer PanUpdated="OnDragHandlePanUpdated" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- Sidebar -->
        <CollectionView Grid.Column="2"
                        ItemsSource="{Binding Channels}"
                        BackgroundColor="LightGray"
                        SelectionMode="None"
                        Margin="10,0,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding ., Converter={StaticResource ChannelToStringConverter}}" Padding="3" FontSize="14" TextColor="Black">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding BindingContext.ChannelSelectedCommand, Source={x:Reference RootGrid}}"
                                CommandParameter="{Binding .}" />
                        </Label.GestureRecognizers>
                    </Label>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
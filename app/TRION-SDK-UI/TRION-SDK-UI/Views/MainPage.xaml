<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             x:Class="TRION_SDK_UI.MainPage">

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <!-- Fixed header area for buttons -->
            <RowDefinition Height="Auto"/>
            <!-- Main content area -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- Main content -->
            <ColumnDefinition Width="6" />
            <!-- Drag handle -->
            <ColumnDefinition Width="300" x:Name="SidebarColumn" />
            <!-- Sidebar -->
        </Grid.ColumnDefinitions>

        <!-- Fixed Header with Buttons - Always visible -->
        <Border Grid.Row="0" Grid.Column="0" 
                Padding="10" 
                BackgroundColor="{AppThemeBinding Light=#f8f8f8, Dark=#333333}"
                Stroke="{AppThemeBinding Light=#e0e0e0, Dark=#444444}"
                StrokeThickness="0,0,0,1"
                Margin="0,0,0,5">
            <HorizontalStackLayout Spacing="5">
                <Button Text="Lock Scrolling" Command="{Binding LockScrollingCommand}" />
                <Button Text="Start Acquisition" Command="{Binding StartAcquisitionCommand}" />
                <Button Text="Stop Acquisition" Command="{Binding StopAcquisitionCommand}" />
                <Button Text="Toggle Theme" Command="{Binding ToggleThemeCommand}" />
            </HorizontalStackLayout>
        </Border>

        <!-- Main Content - Scrollable -->
        <ScrollView Grid.Row="1" Grid.Column="0">
            <VerticalStackLayout
                Padding="30,0"
                Spacing="25">

                <Label
                    Text="System Information"
                    Style="{StaticResource SubHeadline}"
                    SemanticProperties.HeadingLevel="Level2" HorizontalOptions="Start" />

                <HorizontalStackLayout Spacing="10">
                    <Label Text="Y Min:" VerticalOptions="Center"/>
                    <Entry Text="{Binding YAxisMin, Mode=TwoWay}" Keyboard="Numeric" WidthRequest="80"/>
                    <Label Text="Y Max:" VerticalOptions="Center"/>
                    <Entry Text="{Binding YAxisMax, Mode=TwoWay}" Keyboard="Numeric" WidthRequest="80"/>
                </HorizontalStackLayout>

                <!-- Chart -->
                <lvc:CartesianChart
                    Series="{Binding MeasurementSeries}"
                    YAxes="{Binding YAxes}"
                    HeightRequest="400"
                    Margin="0,20,0,0"
                    ZoomMode="X"/>
                <Slider
                    Minimum="100"
                    Maximum="5000"
                    Value="{Binding WindowSize, Mode=TwoWay}"
                    Margin="0,10,0,0"/>
                <Label Text="{Binding WindowSize}" />
                <Slider
                    Minimum="0"
                    Maximum="{Binding MaxScrollIndex}"
                    Value="{Binding ScrollIndex, Mode=TwoWay}"
                    Margin="0,10,0,0"/>


                <!-- Digital Meters Display - NEW SECTION -->
                <CollectionView Grid.Column="2"
                        ItemsSource="{Binding DigitalMeters}"
                        BackgroundColor="LightGray"
                        SelectionMode="None"
                        Margin="10,0,0,0"
                        HorizontalOptions="Fill">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="2" Padding="8,4">
                                <HorizontalStackLayout>
                                    <!-- Format Value directly instead of using DisplayValue -->
                                    <Label FontSize="14">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding Label} " />
                                                <Span Text="  " />
                                                <Span Text="{Binding Value, StringFormat='{0:F2} '}" />
                                                <Span Text="{Binding Unit}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </HorizontalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>


                <!-- Channel Series Chart -->
                <CollectionView ItemsSource="{Binding ChannelSeries}"
                    HeightRequest="400"
                    VerticalOptions="Fill">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <lvc:CartesianChart Series="{Binding .}"
                                YAxes="{Binding Path=BindingContext.YAxes, Source={x:Reference RootGrid}}"
                                HeightRequest="200"
                                VerticalOptions="Fill"
                                ZoomMode="X"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <!-- Log View
                <CollectionView x:Name="LogView"
                                ItemsSource="{Binding LogMessages}"
                                HeightRequest="200">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding .}" FontSize="12" />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>  -->
            </VerticalStackLayout>
        </ScrollView>
        
        <!-- Drag Handle - spans both rows -->
        <BoxView Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                 BackgroundColor="DarkGray"
                 WidthRequest="20"
                 HorizontalOptions="Fill"
                 VerticalOptions="Fill"
                 x:Name="DragHandle">
            <BoxView.GestureRecognizers>
                <PanGestureRecognizer PanUpdated="OnDragHandlePanUpdated" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- Sidebar - spans both rows -->
        <CollectionView Grid.Row="0" Grid.RowSpan="2" Grid.Column="2"
                        ItemsSource="{Binding Channels}"
                        BackgroundColor="LightGray"
                        SelectionMode="None"
                        Margin="10,0,0,0"
                        HorizontalOptions="Fill">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout Spacing="20" Padding="0" VerticalOptions="Center">
                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" VerticalOptions="Center" />
                        <Label Text="{Binding ., Converter={StaticResource ChannelToStringConverter}}"
                               FontSize="12"
                               TextColor="Black"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
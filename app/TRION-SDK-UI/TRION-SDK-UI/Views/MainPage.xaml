<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ScottPlot="clr-namespace:ScottPlot.Maui;assembly=ScottPlot.Maui"
             x:Class="TRION_SDK_UI.MainPage">

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="6" />
            <ColumnDefinition Width="300" x:Name="SidebarColumn" />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" 
                Padding="10" 
                BackgroundColor="{AppThemeBinding Light=#f8f8f8, Dark=#333333}"
                Stroke="{AppThemeBinding Light=#e0e0e0, Dark=#444444}"
                Margin="0,0,0,5">
            <HorizontalStackLayout Spacing="5">
                <Button Text="Lock Scrolling" Command="{Binding LockScrollingCommand}" />
                <Button Text="Start Acquisition" Command="{Binding StartAcquisitionCommand}" />
                <Button Text="Stop Acquisition" Command="{Binding StopAcquisitionCommand}" />
                <Button Text="Toggle Theme" Command="{Binding ToggleThemeCommand}" />
            </HorizontalStackLayout>
        </Border>

        <!-- CONTENT: plot (not scrollable) + rest (scrollable) -->
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- plot -->
                <RowDefinition Height="*"/>
                <!-- scrollable content -->
            </Grid.RowDefinitions>

            <!-- Plot is outside the ScrollView so wheel only affects the plot -->
            <ScottPlot:MauiPlot x:Name="MauiPlot1"
                                Grid.Row="0"
                                HeightRequest="400" />

            <!-- Everything else stays scrollable -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout Padding="30,0" Spacing="25">
                    <CollectionView Grid.Column="2"
                                    ItemsSource="{Binding DigitalMeters}"
                                    BackgroundColor="LightGray"
                                    SelectionMode="None"
                                    Margin="10,0,0,0"
                                    HorizontalOptions="Fill">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="2" Padding="8,4">
                                    <HorizontalStackLayout>
                                        <Label FontSize="14">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding Label} " />
                                                    <Span Text="  " />
                                                    <Span Text="{Binding Value, StringFormat='{0:F2} '}" />
                                                    <Span Text="{Binding Unit}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </HorizontalStackLayout>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Logs -->
                    <Label Text="Log"
                           Style="{StaticResource SubHeadline}"
                           SemanticProperties.HeadingLevel="Level2"
                           HorizontalOptions="Start" />

                    <CollectionView x:Name="LogView"
                                    ItemsSource="{Binding LogMessages}"
                                    HeightRequest="200"
                                    BackgroundColor="#11111111"
                                    SelectionMode="None">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="2" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Label Text="{Binding .}"
                                       FontSize="12"
                                       FontFamily="Consolas"
                                       LineBreakMode="WordWrap"
                                       TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                </VerticalStackLayout>
            </ScrollView>
        </Grid>

        <BoxView Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                 BackgroundColor="DarkGray"
                 WidthRequest="20"
                 HorizontalOptions="Fill"
                 VerticalOptions="Fill"
                 x:Name="DragHandle">
            <BoxView.GestureRecognizers>
                <PanGestureRecognizer PanUpdated="OnDragHandlePanUpdated" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <CollectionView Grid.Row="0" Grid.RowSpan="2" Grid.Column="2"
                        ItemsSource="{Binding Channels}"
                        BackgroundColor="LightGray"
                        SelectionMode="None"
                        Margin="10,0,0,0"
                        HorizontalOptions="Fill">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout Spacing="20" Padding="0" VerticalOptions="Center">
                        <FlyoutBase.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Text="Show Channel Properties"
                                                Command="{Binding BindingContext.ShowChannelPropertiesCommand, Source={x:Reference RootGrid}}"
                                                CommandParameter="{Binding .}" />
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Text="Copy Channel Path"
                                                Command="{Binding BindingContext.CopyChannelPathCommand, Source={x:Reference RootGrid}}"
                                                CommandParameter="{Binding .}" />
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Text="Select only this"
                                                Command="{Binding BindingContext.SelectOnlyChannelCommand, Source={x:Reference RootGrid}}"
                                                CommandParameter="{Binding .}" />
                                <MenuFlyoutItem Text="Select all on board"
                                                Command="{Binding BindingContext.SelectAllOnBoardCommand, Source={x:Reference RootGrid}}"
                                                CommandParameter="{Binding .}" />
                                <MenuFlyoutItem Text="Deselect all on board"
                                                Command="{Binding BindingContext.DeselectAllOnBoardCommand, Source={x:Reference RootGrid}}"
                                                CommandParameter="{Binding .}" />
                            </MenuFlyout>
                        </FlyoutBase.ContextFlyout>

                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" VerticalOptions="Center" />
                        <Label Text="{Binding ., Converter={StaticResource ChannelToStringConverter}}"
                               FontSize="12"
                               TextColor="Black"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


    </Grid>
</ContentPage>